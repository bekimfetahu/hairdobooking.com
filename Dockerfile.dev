# Base Node.js image
FROM node:20-alpine

# Install useful tools
RUN apk add --no-cache bash git

# Set working directory
WORKDIR /usr/src/app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of your app
COPY . .

# Set environment
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3000

# Expose the Next.js dev server port
EXPOSE 3000

# Default to bash (youâ€™ll install and run manually)
CMD ["bash"]
